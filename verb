#!/usr/bin/env python

import os
import sys

from cana.data import Verb
from cana.ui import VerbWindow
from cana.app import Application

def activate(app, verbs):
    window = VerbWindow(verbs)
    window.fullscreen()
    app.add_window(window)
    window.show()

if __name__ == '__main__':
    app = Application()

    if len(sys.argv) > 1:
        verblist = sys.argv[1:]
    else:
        verblist = os.listdir('verbs')

    verbs = []
    for f in verblist:
        verbs.append(Verb(f))

    app.connect('activate', activate, verbs)

    app.run(sys.argv)
